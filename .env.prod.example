# Database Configuration
POSTGRES_USER=ododocs
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=ododocs
POSTGRES_PORT=9700

# Redis Configuration
REDIS_PORT=9720

# Object Storage (MinIO)
MINIO_PORT_API=9710
MINIO_PORT_CONSOLE=9711
OBJECT_STORAGE_ACCESS_KEY=minio_access_key
OBJECT_STORAGE_SECRET_KEY=minio_secret_key_change_me
OBJECT_STORAGE_BUCKET=ododocs
OBJECT_STORAGE_REGION=ap-northeast-2
OBJECT_STORAGE_ENDPOINT=http://minio:9000

# Cookie Secret (Used for signing cookies)
COOKIE_SECRET=change-me-in-production-secure-string-here

# Cookie Settings
COOKIE_DOMAIN=.ododocs.com
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax

# Frontend Runtime Variables
FRONTEND_URL=https://service.ododocs.com

# ------------------------------------------------------------------------------
# Production Only Settings (Cloudflare & TLS)
# ------------------------------------------------------------------------------
# These settings are used for DNS-01 Challenge via Certbot to issue Wildcard SSL certificates (*.ododocs.com).
# Certbot uses the Cloudflare API to add a TXT record for verification.
# This allows for automatic renewal without port 80/443 conflicts.
CLOUDFLARE_EMAIL=your_email@example.com
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# ------------------------------------------------------------------------------
# Build-Time Variables (Docker Build Only)
# ------------------------------------------------------------------------------
# These variables are only consumed during 'docker build' to bake configuration into the static frontend assets.
# They are NOT required at runtime (runtime changes to these will have no effect).
BUILD_VITE_API_BASE_URL=https://api.ododocs.com
BUILD_VITE_HOCUSPOCUS_URL=wss://collab.ododocs.com
