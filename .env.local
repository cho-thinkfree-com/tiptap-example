# Backend API Server
PORT=9920

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=9700

# Object Storage
OBJECT_STORAGE_ENDPOINT=http://localhost:9710
OBJECT_STORAGE_REGION=ap-northeast-2
OBJECT_STORAGE_BUCKET=ododocs
OBJECT_STORAGE_ACCESS_KEY=minio
OBJECT_STORAGE_SECRET_KEY=minio123
OBJECT_STORAGE_USE_PATH_STYLE=true
OBJECT_STORAGE_SSL=false

# MinIO Ports (Docker Host Mapping)
MINIO_PORT_API=9710
MINIO_PORT_CONSOLE=9711

# Redis (for Hocuspocus scaling)
REDIS_HOST=localhost
REDIS_PORT=9720

# Hocuspocus (Collaboration Server)
HOCUSPOCUS_PORT=9930

# Prisma
DATABASE_URL="postgresql://postgres:postgres@localhost:9700/postgres"

# Security & Cookies
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax 

# Cookie Secret
COOKIE_SECRET=local-dev-secret

# Frontend Runtime Variables
# Comma-separated list for multiple origins
FRONTEND_URL=http://localhost:9910

# ------------------------------------------------------------------------------
# Production Only Settings (Cloudflare & TLS)
# ------------------------------------------------------------------------------
# These settings are used for DNS-01 Challenge via Certbot to issue Wildcard SSL certificates.
# They are strictly required in PRODUCTION for SSL auto-renewal.
# Locally, they are unused.
CLOUDFLARE_EMAIL=
CLOUDFLARE_API_TOKEN=

# ------------------------------------------------------------------------------
# Build-Time Variables (Docker Build Only)
# ------------------------------------------------------------------------------
# These variables are only consumed during 'docker build' to bake configuration into the static frontend assets.
# They are NOT required at runtime (runtime changes to these will have no effect).
# Frontend Runtime (Local Development)
VITE_API_BASE_URL=http://localhost:9920
VITE_HOCUSPOCUS_URL=ws://localhost:9930
BUILD_VITE_API_BASE_URL=http://localhost:9920
BUILD_VITE_HOCUSPOCUS_URL=ws://localhost:9930
